@model IEnumerable<AuthenticationTest.Models.tbl_dept>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Departments</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.DName)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.DName)
        </td>
        <td>
            
            @Html.ActionLink("Details", "Details", new { id=item.D_Id })
            @if(User.IsInRole("Admin"))
            {
                <text>|</text>
                @Html.ActionLink("Edit", "Edit", new { id = item.D_Id });
                <text>|</text>
                @Html.ActionLink("Delete", "Delete", new { id = item.D_Id });
            }
        </td>
    </tr>
}

</table>
